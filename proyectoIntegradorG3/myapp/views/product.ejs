<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%- include('./partials/head') %>

<body>
	<!-- Header -->
	
	<!-- /Header -->
	<%- include('./partials/header') %>

	<!-- product detail -->
	<div class="container products-wrapper">
		<% for(let index = 0; index < productos.length; index++) { %>
			<div class="d-flex align-items-center">
				<h2 class="products-title"><%= productos[index].nombre %></h2> 
				<p class="product-detail-description">
					<a href="/patitos/addProduct">Editar</a>
				</p>
			</div>
		<% } %>
		<div class="product-detail">
			<div class="row">
				<% for(let index = 0; index < productos.length; index++) { %>
					<article class="col-12 col-lg-8 product-detail-info">
						<img src="<%= productos[index].imagenProducto%>" alt="" class="product-detail-img">
						<p class="product-detail-description"><%= productos[index].descripcion%></p>
					</article>
				<% } %>

				
				<div class="col-12 col-lg-4">
					<section class="comments">
						<% for (let index = 0; index < productos[index].comentarios.length; index++) { %>
                            <article>
                                <img src="<%= productos[index].comentarios[0].imagenUsuario %>" alt="">
                                <div class="data">
                                    <p class="user">
                                        <strong><a href="/users/profile"><%= productos[index].comentarios[0].Username %></a></strong>
                                        <%= productos[index].comentarios[0].descripcion %>
                                    </p>
                                </div>
                            </article>



						<% } %>
					</section>
					<form class="form" action="/patitos" method="get">
						<input class="form-input" type="text" value="" placeholder="Agregar comentario">
						<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
					</form>
					<hr>
				</div>
			</div>
		</div>
	</div>
	<!-- /product detail -->

	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->

</body>	
</html>
