<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>

<body>
    <!-- Header -->
    <% if (locals.usuario) { %>
        <%- include('./partials/headerLogueado') %>
    <% } else { %>
        <%- include('./partials/header') %>
    <% } %>
    <!-- /Header -->

    <!-- Formulario de Login -->
    <div class="container products-wrapper">
        <div class="row">
            <div class="col-12">
                <h2 class="products-title">Ingresar</h2>
            </div>
            <form class="nuestroForm" action="/users/login" method="POST">
                <label class="form-label" for="email">Email</label>
                <input class="form-input" type="email" name="mail" id="email" value="<%= locals.old && locals.old.mail ? locals.old.mail : '' %>" required>
                <% if (locals.errors && locals.errors.mail) { %>
                    <div class="error"><%= locals.errors.mail.msg %></div>
                <% } %>

                <label class="form-label" for="password">Contrase√±a</label>
                <input class="form-input" type="password" name="contrasenia" id="password" minlength="4" required>
                <% if (locals.errors && locals.errors.contrasenia) { %>
                    <div class="error"><%= locals.errors.contrasenia.msg %></div>
                <% } %>

                <label class="form-label" for="recordarme">Recordarme</label>
                <input type="checkbox" name="recordarme" id="recordarme">

                <button class="buy-now-button buttonRegister" type="submit">Login</button>
            </form>
        </div>
    </div>

    <!-- Footer -->
    <%- include('./partials/footer') %>
    <!-- /Footer -->
</body>

</html>
