<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>

<body>
    <!-- Header -->
    <% if (locals.usuario) { %>
        <%- include('./partials/headerLogueado') %>
    <% } else { %>
        <%- include('./partials/header') %>
    <% } %>
    <!-- /Header -->

    <!-- Formulario de Registro -->
    <div class="container products-wrapper">
        <div class="row">
            <div class="col-12">
                <h2 class="products-title">Registrate</h2>
            </div>
            <form class="formRegister" action="/users/register" method="post">
                <label class="form-label">Nombre</label>
                <input class="form-input" type="text" name="nombre" id="nombre" value="<%= locals.old && locals.old.nombre ? locals.old.nombre : '' %>" required>
                <% if (locals.errors && locals.errors.nombre) { %>
                    <div class="error"><%= locals.errors.nombre.msg %></div>
                <% } %>

                <label class="form-label">Apellido</label>
                <input class="form-input" type="text" name="apellido" id="apellido" value="<%= locals.old && locals.old.apellido ? locals.old.apellido : '' %>" required>
                <% if (locals.errors && locals.errors.apellido) { %>
                    <div class="error"><%= locals.errors.apellido.msg %></div>
                <% } %>

                <label class="form-label">Email</label>
                <input class="form-input" type="email" name="mail" id="email" value="<%= locals.old && locals.old.mail ? locals.old.mail : '' %>" required>
                <% if (locals.errors && locals.errors.mail) { %>
                    <div class="error"><%= locals.errors.mail.msg %></div>
                <% } %>

                <label class="form-label">Usuario</label>
                <input class="form-input" type="text" name="usuario" id="username" value="<%= locals.old && locals.old.usuario ? locals.old.usuario : '' %>" required>
                <% if (locals.errors && locals.errors.usuario) { %>
                    <div class="error"><%= locals.errors.usuario.msg %></div>
                <% } %>

                <label class="form-label">Contraseña</label>
                <input class="form-input" type="password" name="contrasenia" id="password" minlength="4" required>
                <% if (locals.errors && locals.errors.contrasenia) { %>
                    <div class="error"><%= locals.errors.contrasenia.msg %></div>
                <% } %>

                <label class="form-label">Fecha de nacimiento</label>
                <input class="form-input" type="date" name="fechaNacimiento" id="nacimiento">
                <% if (locals.errors && locals.errors.fechaNacimiento) { %>
                    <div class="error"><%= locals.errors.fechaNacimiento.msg %></div>
                <% } %>

                <label class="form-label">Número de documento</label>
                <input class="form-input" type="number" name="numeroDocumento" id="dni">
                <% if (locals.errors && locals.errors.numeroDocumento) { %>
                    <div class="error"><%= locals.errors.numeroDocumento.msg %></div>
                <% } %>

                <label class="form-label">Foto de perfil</label>
                <input class="form-input" type="text" name="foto" id="foto">
                <% if (locals.errors && locals.errors.foto) { %>
                    <div class="error"><%= locals.errors.foto.msg %></div>
                <% } %>

                <button class="buy-now-button buttonRegister" type="submit">Registrarse</button>
            </form>

            <% if (locals.successMessage) { %>
                <script>
                    alert("<%= locals.successMessage %>");
                </script>
            <% } %>
        </div>
    </div>

    <!-- Footer -->
    <%- include('./partials/footer') %>
    <!-- /Footer -->
</body>

</html>
