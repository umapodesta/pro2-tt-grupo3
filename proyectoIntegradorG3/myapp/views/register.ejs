<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%- include('./partials/head') %>

<body>
	<!-- Header -->
	<%- include('./partials/headerLogueado') %>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Registrate</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<form class="formRegister" action="/users/register" method="post">
				<label class="form-label">
					Email
				</label>
				<input class="form-input" type="email" name="mail" id="email" required>
				
				<% if (locals.errors && errors.mail) { %>
					<div class="error"><%= errors.mail.msg %></div>
				  <% } %>

				<label class="form-label">
					Usuario
				</label>
				<input class="form-input" type="text" name="usuario" id="username" required>
				<% if (locals.errors && errors.usuario){ %>
					<div class="error"><%= errors.usuario.msg %></div>
				  <% } %>

				<label class="form-label">
					Contraseña
				</label>
				<input class="form-input" type="password" name="contrasenia" id="password" minlength='4' required>
				<% if (locals.errors && errors.contrasenia) { %>
                    <div class="error"><%= errors.contrasenia.msg %></div>
                <% } %>

				<label class="form-label">
					Fecha de nacimiento
				</label>
				<input class="form-input" type="date" name="fechaNacimiento" id="nacimiento" >
				<% if (locals.errors && errors.fechaNacimiento) { %>
					<div class="error"><%= errors.fechaNacimiento.msg %></div>
				  <% } %>

				<label class="form-label">
					Número de documento
				</label>
				<input class="form-input" type="number" name="numeroDocumento" id="dni" >
				<% if (locals.errors && errors.numeroDocumento) { %>
					<div class="error"><%= errors.numeroDocumento.msg %></div>
				  <% } %>

				<label class="form-label">
					Foto de perfil
				</label>
				<input class="form-input" type="text" name="foto" id="foto" >
				<% if (locals.errors && errors.foto) { %>
					<div class="error"><%= errors.foto.msg %></div>
				  <% } %>

				<button class="buy-now-button buttonRegister" type="submit">Registrarse</button>
			</form>


	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>

</html>